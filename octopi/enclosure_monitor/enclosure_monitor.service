[Unit]
Description=Enclosure Monitor Service
After=multi-user.target
StartLimitBurst=10
StartLimitIntervalSec=10

[Service]
Type=simple
Restart=always
RestartSec=5
User=pi
EnvironmentFile=/home/pi/wg-scripts/.env
ExecStart=/home/pi/wg-scripts/.venv/bin/python /home/pi/wg-scripts/octopi/enclosure_monitor/main.py

[Install]
WantedBy=multi-user.target
